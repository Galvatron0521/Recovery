<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/item_toolbar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:contentPadding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="治疗范围"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_scope"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textColor="@color/textContent"
                android:textSize="13sp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/subsidy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:contentPadding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补贴政策"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_policy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textColor="@color/textContent"
                android:textSize="13sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:contentPadding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/contactWay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/icon_contacts"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/contactWay"
                android:layout_marginTop="5dp"
                android:src="@drawable/contacts_icon" />

            <TextView
                android:id="@+id/tv_contacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/icon_contacts"
                android:layout_alignTop="@+id/icon_contacts"
                android:layout_below="@+id/contactWay"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/icon_contacts"
                android:gravity="center_vertical"
                android:textColor="@color/textContent"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/icon_tel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/icon_contacts"
                android:layout_marginTop="5dp"
                android:src="@drawable/tel_icon" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/icon_tel"
                android:layout_alignTop="@+id/icon_tel"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/icon_tel"
                android:gravity="center_vertical"
                android:textColor="@color/head_bg"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:contentPadding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_position"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/position_icon" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/icon_position"
                android:layout_alignTop="@+id/icon_position"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/icon_position"
                android:gravity="center_vertical"
                android:text="机构位置"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>