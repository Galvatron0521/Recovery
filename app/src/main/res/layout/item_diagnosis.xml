<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:contentPadding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_unitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/icon_contacts"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/tv_unitName"
                android:layout_marginTop="5dp"
                android:src="@drawable/contacts_icon" />

            <TextView
                android:id="@+id/tv_contacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/icon_contacts"
                android:layout_alignTop="@+id/icon_contacts"
                android:layout_below="@+id/contactWay"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/icon_contacts"
                android:gravity="center_vertical"
                android:textColor="@color/textContent"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/icon_tel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/icon_contacts"
                android:layout_marginTop="5dp"
                android:src="@drawable/tel_icon" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/icon_tel"
                android:layout_alignTop="@+id/icon_tel"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/icon_tel"
                android:gravity="center_vertical"
                android:textColor="@color/head_bg"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>